<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<module rename-to="SilverpeasPoc">

  <!-- Inherit the core Web Toolkit stuff.                        -->
  <inherits name="com.google.gwt.user.User"/>
  <inherits name="com.google.gwt.i18n.I18N"/>
  <inherits name="com.google.gwt.http.HTTP"/>

  <!--<inherits name='com.google.gwt.user.theme.clean.Clean'/>-->

  <!-- Inherit the ERRAI stuff.                                   -->
  <inherits name="org.jboss.errai.ioc.Container"/>
  <inherits name="org.jboss.errai.bus.ErraiBus"/>
  <inherits name="org.jboss.errai.enterprise.CDI"/>
  <inherits name="org.jboss.errai.ui.UI"/>
  <inherits name="org.jboss.errai.ui.nav.Navigation"/>

  <inherits name="org.turbogwt.core.collections.Collections"/>
  <inherits name="io.reinert.gdeferred.GDeferred"/>

  <replace-with class="org.silverpeas.poc.api.navigation.ContentPanel">
    <when-type-is class="org.jboss.errai.ui.nav.client.local.NavigatingContainer"/>
  </replace-with>

  <!-- Specify the paths for translatable code                    -->
  <extend-property name="locale" values="fr,en"/>
  <source path='api'/>
  <source path='client'/>
</module>

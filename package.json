{
  "name": "silverpeas-web",
  "version": "1.0.0",
  "description": "Silverpeas Web 2.0 UI based upon Polymer",
  "main": "main.js",
  "scripts": {
    "deps": "npm install -g bower vulcanize rimraf mkdirp less http-server imagemin browserify minifyify nodemon web-component-tester && bower install",
    "clean": "rimraf dist",
    "serve": "http-server -p 9090 app/",
    "dist": "npm run build:prepare && npm run build:styles && npm run build:images && npm run build:html && npm run build:scripts",
    "build:prepare": "mkdirp dist/styles dist/images dist/elements",
    "build:styles": "lessc app/styles/knacss.less > dist/styles/styles.css",
    "build:images": "imagemin -i -p app/images/* dist/images",
    "build:scripts": "browserify -d app/scripts/main.js -p [minifyify --map main.js.map --output dist/main.js.map] > dist/main.js",
    "build:html": "vulcanize app/index.html > dist/index.html && vulcanize app/elements/elements.html > dist/elements/elements.html",
    "watch:dev": "nodemon -q -w app/ --ext '.' --exec 'npm run dist'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SilverTeamWork/POC_Template.git"
  },
  "keywords": [
    "Silverpeas",
    "Web",
    "Polymer",
    "POC"
  ],
  "author": "Silverpeas (http://www.silverpeas.org)",
  "contributors": [
    "Miguel Moquillon <miguel.moquillon@silverpeas.org>",
    "Yohann Chastagnier <yohann.chastagnier@silverpeas.org>",
    "Etienne Bonnet <etienne.bonnet@silverpeas.org>"
  ],
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/SilverTeamWork/POC_Template/issues"
  },
  "homepage": "https://github.com/SilverTeamWork/POC_Template#readme",
  "devDependencies": {
    "bower": "^1.4.1",
    "browserify": "^10.2.3",
    "http-server": "^0.8.0",
    "imagemin": "^3.2.0",
    "less": "^2.5.1",
    "minifyify": "^7.0.0",
    "mkdirp": "^0.5.1",
    "nodemon": "^1.3.7",
    "rimraf": "^2.3.4",
    "vulcanize": "^1.8.1",
    "web-component-tester": "git://github.com/Polymer/web-component-tester.git#master"
  },
  "engines": {
    "node": ">=0.10.0"
  }
}
